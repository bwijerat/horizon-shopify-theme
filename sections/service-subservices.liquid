<div class="section-wrapper color-{{ section.settings.color_scheme }}">
  <div
    class="section service-subservices page-width spacing-style"
    style="
      {% render 'spacing-style', settings: section.settings %}
    "
  >
    <div
      class="service-subservices__header"
      style="padding-block-start: {{ section.settings.heading_padding_top }}px; padding-block-end: {{ section.settings.heading_padding_bottom }}px; row-gap: {{ section.settings.heading_gap }}px;"
    >
      {%- if section.settings.heading != blank -%}
        <h2 class="service-subservices__heading h2">{{ section.settings.heading }}</h2>
      {%- endif -%}
      {%- if section.settings.subheading != blank -%}
        <p class="service-subservices__subheading">
          {{ section.settings.subheading }}
        </p>
      {%- endif -%}
    </div>

    <div class="service-subservices__grid">
      {%- for block in section.blocks -%}
        <div class="service-subservices__card color-{{ block.settings.color_scheme }}" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != blank -%}
            <div class="service-subservices__icon">
              {{ block.settings.icon | image_url: width: 80 | image_tag: loading: 'lazy', sizes: '80px', alt: block.settings.title | escape }}
            </div>
          {%- elsif block.settings.icon_fallback != blank -%}
            <div class="service-subservices__icon">{{ block.settings.icon_fallback }}</div>
          {%- endif -%}
          {%- if block.settings.title != blank -%}
            <h3 class="service-subservices__title h4">{{ block.settings.title }}</h3>
          {%- endif -%}
          {%- if block.settings.description != blank -%}
            <p class="service-subservices__description">{{ block.settings.description }}</p>
          {%- endif -%}
          {%- if block.settings.link_label != blank and block.settings.link != blank -%}
            <a
              class="button-secondary"
              href="{{ block.settings.link }}"
              {% if block.settings.link_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
            >
              {{ block.settings.link_label }}
            </a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Subservices grid",
  "tag": "section",
  "class": "section-wrapper",
  "max_blocks": 12,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What’s included"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Choose the service that fits your home. Each visit is tailored to your needs."
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Heading spacing"
    },
    {
      "type": "range",
      "id": "heading_padding_top",
      "label": "Heading top padding",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "heading_padding_bottom",
      "label": "Heading bottom padding",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "heading_gap",
      "label": "Spacing between heading and subheading",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "default": 72
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "default": 72
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Subservice",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Grass Cutting"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Regular mowing to keep lawns tidy and healthy."
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon or image"
        },
        {
          "type": "text",
          "id": "icon_fallback",
          "label": "Icon fallback (emoji/text)",
          "default": "✔️"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Button label",
          "default": "Request this"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        },
        {
          "type": "checkbox",
          "id": "link_new_tab",
          "label": "Open in new tab",
          "default": false
        },
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "Card color scheme",
          "default": "scheme-2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Subservices grid",
      "blocks": [
        { "type": "item" },
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .service-subservices__header {
    display: grid;
    gap: 0;
    max-width: 48rem;
    margin-bottom: var(--gap-xl);
  }

  .service-subservices__heading {
    margin: 0;
  }

  .service-subservices__subheading {
    margin: 0;
    color: var(--color-foreground);
  }

  .service-subservices__grid {
    display: grid;
    gap: var(--gap-lg);
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  }

  .service-subservices__card {
    padding: var(--padding-xl);
    border: 1px solid var(--color-border);
    border-radius: var(--style-border-radius-cards);
    display: grid;
    gap: var(--gap-sm);
    align-content: start;
  }

  .service-subservices__icon {
    width: 48px;
    height: 48px;
    display: grid;
    place-items: center;
    border-radius: 50%;
    background: var(--color-surface, rgba(0,0,0,0.04));
    font-size: 24px;
    overflow: hidden;
  }

  .service-subservices__icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .service-subservices__title {
    margin: 0;
  }

  .service-subservices__description {
    margin: 0;
    color: var(--color-foreground);
  }
{% endstylesheet %}
