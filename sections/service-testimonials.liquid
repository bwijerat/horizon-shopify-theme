{% stylesheet %}
  .service-testimonials__header {
    display: grid;
    gap: 0;
    max-width: 48rem;
    margin-bottom: var(--gap-xl);
  }

  .service-testimonials__text {
    margin: 0;
  }

  .service-testimonials__text--subheading {
    color: var(--color-foreground);
  }

  .service-testimonials__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: var(--gap-lg);
  }

  .service-testimonials__card {
    padding: var(--padding-xl);
    border: 1px solid var(--color-border);
    border-radius: var(--style-border-radius-cards);
    display: grid;
    gap: var(--gap-md);
  }

  .service-testimonials__quote {
    margin: 0;
    font-size: 1.05rem;
    line-height: 1.6;
  }

  .service-testimonials__meta {
    display: flex;
    gap: var(--gap-sm);
    font-weight: 600;
    flex-wrap: wrap;
  }

  .service-testimonials__location {
    color: var(--color-foreground);
    font-weight: 400;
  }

  .service-testimonials__area {
    margin-top: var(--gap-xl);
    padding: var(--gap-md) var(--gap-lg);
    border-left: 3px solid var(--color-primary);
    border-radius: var(--style-border-radius-cards);
    display: inline-flex;
    gap: var(--gap-sm);
    align-items: center;
    background: color-mix(in srgb, var(--color-primary) 6%, transparent);
  }

  .service-testimonials__area-label {
    font-weight: 700;
  }
{% endstylesheet %}
