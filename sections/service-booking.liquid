<div class="section-wrapper color-{{ section.settings.color_scheme }}">
  <div
    class="section service-booking page-width spacing-style"
    style="
      {% render 'spacing-style', settings: section.settings %}
    "
  >
    <div class="service-booking__content">
      <div
        class="service-booking__intro"
        style="padding-block-start: {{ section.settings.heading_padding_top }}px; padding-block-end: {{ section.settings.heading_padding_bottom }}px;"
      >
        {%- if section.settings.eyebrow != blank -%}
          <p class="service-booking__eyebrow">{{ section.settings.eyebrow }}</p>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h1 class="service-booking__heading h1">{{ section.settings.heading }}</h1>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <p
            class="service-booking__subheading"
            style="margin-top: {{ section.settings.heading_gap }}px;"
          >
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}
      </div>

      <div class="service-booking__actions">
        {%- if section.settings.primary_label != blank and section.settings.primary_link != blank -%}
          <a
            class="button"
            href="{{ section.settings.primary_link }}"
            {% if section.settings.primary_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
          >
            {{ section.settings.primary_label }}
          </a>
        {%- endif -%}
        {%- if section.settings.secondary_label != blank and section.settings.secondary_link != blank -%}
          <a
            class="button-secondary"
            href="{{ section.settings.secondary_link }}"
            {% if section.settings.secondary_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
          >
            {{ section.settings.secondary_label }}
          </a>
        {%- endif -%}
      </div>

      {%- if section.settings.embed_code != blank -%}
        <div class="service-booking__embed">
          {{ section.settings.embed_code }}
        </div>
      {%- else -%}
        <div class="service-booking__placeholder">
          <p>Add your booking app embed code here.</p>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Booking hero + embed",
  "tag": "section",
  "class": "section-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Book a service"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Schedule your home service"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Choose your service, preferred time, and weâ€™ll confirm your visit."
    },
    {
      "type": "richtext",
      "id": "embed_code",
      "label": "Booking embed",
      "info": "Paste booking app embed code or instructions."
    },
    {
      "type": "text",
      "id": "primary_label",
      "label": "Primary CTA label",
      "default": "Request a Quote"
    },
    {
      "type": "url",
      "id": "primary_link",
      "label": "Primary CTA link"
    },
    {
      "type": "checkbox",
      "id": "primary_new_tab",
      "label": "Open primary CTA in new tab",
      "default": false
    },
    {
      "type": "text",
      "id": "secondary_label",
      "label": "Secondary CTA label",
      "default": "Contact us"
    },
    {
      "type": "url",
      "id": "secondary_link",
      "label": "Secondary CTA link"
    },
    {
      "type": "checkbox",
      "id": "secondary_new_tab",
      "label": "Open secondary CTA in new tab",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Heading spacing"
    },
    {
      "type": "range",
      "id": "heading_padding_top",
      "label": "Heading top padding",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "heading_padding_bottom",
      "label": "Heading bottom padding",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "heading_gap",
      "label": "Spacing between heading and subheading",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 160,
      "step": 4,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Booking hero + embed"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .service-booking__content {
    display: grid;
    gap: var(--gap-lg);
    max-width: 800px;
  }

  .service-booking__intro {
    display: grid;
    gap: 0;
  }

  .service-booking__eyebrow {
    letter-spacing: 0.04em;
    text-transform: uppercase;
    font-weight: 600;
    font-size: 1rem;
  }

  .service-booking__subheading {
    margin: 0;
    color: var(--color-foreground);
  }

  .service-booking__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--gap-md);
  }

  .service-booking__embed,
  .service-booking__placeholder {
    padding: var(--padding-xl);
    border-radius: var(--style-border-radius-cards);
    border: 1px dashed var(--color-border);
  }
{% endstylesheet %}
