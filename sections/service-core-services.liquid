{% stylesheet %}
  .service-core__header {
    display: grid;
    gap: 0;
    max-width: 48rem;
    margin-bottom: var(--gap-xl);
  }

  .service-core__text {
    margin: 0;
  }

  .service-core__text--subheading {
    color: var(--color-foreground);
  }

  .service-core__grid {
    display: grid;
    gap: var(--gap-lg);
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  }

  .service-core__card {
    padding: var(--padding-xl);
    border-radius: var(--style-border-radius-cards);
    border: 1px solid var(--color-border);
    display: grid;
    gap: var(--gap-md);
    align-content: start;
  }

  .service-core__icon {
    width: 64px;
    height: 64px;
    display: grid;
    place-items: center;
    font-size: 32px;
    border-radius: 50%;
    background: var(--color-surface, rgba(0,0,0,0.04));
    overflow: hidden;
  }

  .service-core__icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .service-core__title {
    margin: 0;
  }

  .service-core__description {
    margin: 0;
    color: var(--color-foreground);
  }
{% endstylesheet %}
