<div class="section-wrapper color-{{ section.settings.color_scheme }}">
  <div
    class="section service-core page-width spacing-style"
    style="
      {% render 'spacing-style', settings: section.settings %}
    "
  >
    {%- assign has_header_text = false -%}
    {%- assign has_cards = false -%}
    {%- for block in section.blocks -%}
      {%- if block.type == 'text' -%}
        {%- assign has_header_text = true -%}
      {%- elsif block.type == 'service' -%}
        {%- assign has_cards = true -%}
      {%- endif -%}
    {%- endfor -%}

    {%- if has_header_text -%}
      <div
        class="service-core__header"
        style="padding-block-start: {{ section.settings.heading_padding_top }}px; padding-block-end: {{ section.settings.heading_padding_bottom }}px; row-gap: {{ section.settings.heading_gap }}px;"
      >
        {%- for block in section.blocks -%}
          {%- if block.type == 'text' -%}
            {%- assign role = block.settings.text_role | default: 'body' -%}
            {%- capture text_classes -%}
              service-core__text service-core__text--{{ role }}
            {%- endcapture -%}
            {%- assign text_class_value = text_classes | strip -%}
            {% render 'text', block: block, class: text_class_value %}
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if has_cards -%}
      <div class="service-core__grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'service' -%}
            <div class="service-core__card color-{{ block.settings.color_scheme }}" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <div class="service-core__icon">
                  {{ block.settings.icon | image_url: width: 120 | image_tag: loading: 'lazy', sizes: '120px', alt: block.settings.title | escape }}
                </div>
              {%- elsif block.settings.icon_fallback != blank -%}
                <div class="service-core__icon">{{ block.settings.icon_fallback }}</div>
              {%- endif -%}
              {%- if block.settings.title != blank -%}
                <h3 class="service-core__title h4">{{ block.settings.title }}</h3>
              {%- endif -%}
              {%- if block.settings.description != blank -%}
                <p class="service-core__description">{{ block.settings.description }}</p>
              {%- endif -%}
              {%- if block.settings.link_label != blank and block.settings.link != blank -%}
                <a
                  class="button-secondary"
                  href="{{ block.settings.link }}"
                  {% if block.settings.link_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
                >
                  {{ block.settings.link_label }}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

