    "type_preset": {{ section.settings.eyebrow_type_preset | json }},
    "font": {{ section.settings.eyebrow_font | json }},
    "font_size": {{ section.settings.eyebrow_font_size | json }},
    "line_height": {{ section.settings.eyebrow_line_height | json }},
    "letter_spacing": {{ section.settings.eyebrow_letter_spacing | json }},
    "case": {{ section.settings.eyebrow_case | json }},
    "wrap": {{ section.settings.eyebrow_wrap | json }},
    "color": {{ section.settings.eyebrow_color | json }}
  }
{%- endcapture %}
{%- assign eyebrow_typography = eyebrow_typography_json | parse_json -%}

{% capture heading_typography_json -%}
  {
    "type_preset": {{ section.settings.heading_type_preset | json }},
    "font": {{ section.settings.heading_font | json }},
    "font_size": {{ section.settings.heading_font_size | json }},
    "line_height": {{ section.settings.heading_line_height | json }},
    "letter_spacing": {{ section.settings.heading_letter_spacing | json }},
    "case": {{ section.settings.heading_case | json }},
    "wrap": {{ section.settings.heading_wrap | json }},
    "color": {{ section.settings.heading_color | json }}
  }
{%- endcapture %}
{%- assign heading_typography = heading_typography_json | parse_json -%}

{% capture subheading_typography_json -%}
  {
    "type_preset": {{ section.settings.subheading_type_preset | json }},
    "font": {{ section.settings.subheading_font | json }},
    "font_size": {{ section.settings.subheading_font_size | json }},
    "line_height": {{ section.settings.subheading_line_height | json }},
    "letter_spacing": {{ section.settings.subheading_letter_spacing | json }},
    "case": {{ section.settings.subheading_case | json }},
    "wrap": {{ section.settings.subheading_wrap | json }},
    "color": {{ section.settings.subheading_color | json }}
  }
{%- endcapture %}
{%- assign subheading_typography = subheading_typography_json | parse_json -%}

{% capture eyebrow_classes -%}
  {% if section.settings.eyebrow_type_preset == 'custom' %}
    custom-typography{% if section.settings.eyebrow_font_size != blank %} custom-font-size{% endif %}{% if section.settings.eyebrow_color != blank %} custom-color{% endif %}
  {% elsif section.settings.eyebrow_color != blank %}
    custom-color
  {% endif %}
{%- endcapture %}
{%- assign eyebrow_typography_classes = eyebrow_classes | strip -%}

{% capture heading_classes -%}
  {% if section.settings.heading_type_preset == 'custom' %}
    custom-typography{% if section.settings.heading_font_size != blank %} custom-font-size{% endif %}{% if section.settings.heading_color != blank %} custom-color{% endif %}
  {% elsif section.settings.heading_color != blank %}
    custom-color
  {% endif %}
{%- endcapture %}
{%- assign heading_typography_classes = heading_classes | strip -%}

{% capture subheading_classes -%}
  {% if section.settings.subheading_type_preset == 'custom' %}
    custom-typography{% if section.settings.subheading_font_size != blank %} custom-font-size{% endif %}{% if section.settings.subheading_color != blank %} custom-color{% endif %}
  {% elsif section.settings.subheading_color != blank %}
    custom-color
  {% endif %}
{%- endcapture %}
{%- assign subheading_typography_classes = subheading_classes | strip -%}

{%- assign has_buttons = section.blocks.size -%}

{% capture background_styles -%}
  {% if section.settings.background_image != blank %}
    background-image: url({{ section.settings.background_image | image_url: width: 3840 }});
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  {% endif %}
{%- endcapture %}

{% capture inner_styles -%}
  --service-hero-inner-gap: {{ section.settings.content_media_gap }}px;
{%- endcapture %}

{% capture actions_styles -%}
  --service-hero-actions-gap: {{ section.settings.button_gap }}px;
  --service-hero-actions-offset: {{ section.settings.subheading_button_gap }}px;
{%- endcapture %}

{% capture media_styles -%}
  {% if section.settings.image_lock_aspect %}
    --service-hero-media-width: {{ section.settings.image_size_locked }}%;
  {% else %}
    --service-hero-media-width: {{ section.settings.image_width }}%;
    --service-hero-media-height: {{ section.settings.image_height }}px;
  {% endif %}
{%- endcapture %}

<div class="section-wrapper color-{{ section.settings.color_scheme }} service-hero__wrapper"{% if background_styles != blank %} style="{{ background_styles | strip_newlines }}"{% endif %}>
  <div
    id="{{ section_id }}"
    class="section service-hero page-width spacing-style"
    style="
      {% render 'spacing-style', settings: section.settings %}
    "
  >
    <div class="service-hero__inner" style="{{ inner_styles | strip_newlines }}">
      <div class="service-hero__content">
        {%- if section.settings.eyebrow != blank -%}
          <p
            class="service-hero__eyebrow {% if eyebrow_typography_classes != blank %}{{ eyebrow_typography_classes }}{% endif %}"
            style="{% render 'typography-style', settings: eyebrow_typography, preset: section.settings.eyebrow_type_preset, type: 'body' %}"
          >
            {{ section.settings.eyebrow }}
          </p>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h1
            class="service-hero__heading h1 {% if heading_typography_classes != blank %}{{ heading_typography_classes }}{% endif %}"
            style="{% render 'typography-style', settings: heading_typography, preset: section.settings.heading_type_preset, type: 'heading' %}"
          >
            {{ section.settings.heading }}
          </h1>
        {%- endif -%}
        {%- if section.settings.subheading != blank -%}
          <p
            class="service-hero__subheading {% if subheading_typography_classes != blank %}{{ subheading_typography_classes }}{% endif %}"
            style="{% render 'typography-style', settings: subheading_typography, preset: section.settings.subheading_type_preset, type: 'body' %} margin-top: {{ section.settings.heading_gap }}px;"
          >
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}
        {%- if has_buttons > 0 -%}
          <div class="service-hero__actions" style="{{ actions_styles | strip_newlines }}">
            {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'button' -%}
                  {%- liquid
                    assign block_settings = block.settings
                    assign button_link = block_settings.link
                    if button_link == blank and block_settings.use_booking_link
                      assign button_link = settings.booking_page_link
                    endif

                    assign button_class = 'button'
                    case block_settings.theme
                      when 'secondary'
                        assign button_class = 'button-secondary'
                      when 'booking'
                        assign button_class = 'button button--book'
                      when 'link'
                        assign button_class = 'link'
                      else
                        assign button_class = 'button'
                    endcase
                  -%}
                  {%- capture button_size_style -%}
                    {% render 'size-style', settings: block_settings %}
                  {%- endcapture -%}
                  <a
                    {% if button_link == blank %}
                      role="link"
                      aria-disabled="true"
                    {% else %}
                      href="{{ button_link }}"
                    {% endif %}
                    class="service-hero__button size-style {{ button_class }} service-hero__button--{{ block.id }}"
                    style="{{ button_size_style | strip_newlines }}"
                    {% if block_settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
                    {{ block.shopify_attributes }}
                  >
                    {{ block_settings.label }}
                  </a>
              {%- endcase -%}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>

      <div
        class="service-hero__media {% if section.settings.image_lock_aspect %}service-hero__media--locked{% else %}service-hero__media--unlocked{% endif %}"
        style="{{ media_styles | strip_newlines }}"
      >
        {%- if section.settings.image != blank -%}
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag:
              loading: 'lazy',
              widths: '180, 360, 720, 960, 1200, 1500',
              sizes: '(min-width: 1200px) 50vw, 100vw',
              alt: section.settings.image_alt | default: section.settings.heading | escape
          }}
        {%- else -%}
          <div class="service-hero__placeholder">
            <span>{{ 'Image placeholder' | t }}</span>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

