<div class="section-wrapper color-{{ section.settings.color_scheme }}">
  <div
    class="section service-steps page-width spacing-style"
    style="
      {% render 'spacing-style', settings: section.settings %}
    "
  >
    {%- assign header_blocks = section.blocks | where: 'type', 'text' -%}
    {%- assign step_blocks = section.blocks | where: 'type', 'step' -%}

    {%- if header_blocks.size > 0 -%}
      <div
        class="service-steps__header"
        style="padding-block-start: {{ section.settings.heading_padding_top }}px; padding-block-end: {{ section.settings.heading_padding_bottom }}px; row-gap: {{ section.settings.heading_gap }}px;"
      >
        {%- for block in header_blocks -%}
          {%- capture text_classes -%}
            service-steps__text service-steps__text--{{ block.settings.text_role | default: 'body' }}
          {%- endcapture -%}
          {% render 'text', block: block, class: text_classes | strip %}
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if step_blocks.size > 0 -%}
      <div class="service-steps__grid">
        {%- assign step_index = 0 -%}
        {%- for block in step_blocks -%}
          {%- assign step_index = step_index | plus: 1 -%}
          <div class="service-steps__card color-{{ block.settings.color_scheme }}" {{ block.shopify_attributes }}>
            <div class="service-steps__badge">{{ step_index }}</div>
            {%- if block.settings.title != blank -%}
              <h3 class="service-steps__title h4">{{ block.settings.title }}</h3>
            {%- endif -%}
            {%- if block.settings.description != blank -%}
              <p class="service-steps__description">{{ block.settings.description }}</p>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

